generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id @default(cuid())
  email          String           @unique
  passwordHash   String
  name           String?
  image          String?
  googleId       String?          @unique
  resetTokenHash String?
  resetTokenExp  DateTime?
  emailVerifiedAt  DateTime?
  emailVerifyTokenHash String?
  emailVerifyTokenExpiresAt DateTime?
  creatorProfile CreatorProfile?
  follows        Follow[]         @relation("UserFollows")
  aiSuggestions  AiSuggestion[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}

model CreatorProfile {
  id           String           @id @default(cuid())
  user         User             @relation(fields: [userId], references: [id])
  userId       String           @unique

  handle       String           @unique
  displayName  String
  bio          String?
  avatarUrl    String?
  niche        String?

  newsletters  NewsletterIssue[]
  subscribers  Subscriber[]
  followers    Follow[]         @relation("CreatorFollows")
  aiSuggestions AiSuggestion[]
  allowTraining Boolean @default(true)
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
}

model Follow {
  id          String          @id @default(cuid())
  follower    User            @relation("UserFollows", fields: [followerId], references: [id])
  followerId  String

  creator     CreatorProfile  @relation("CreatorFollows", fields: [creatorId], references: [id])
  creatorId   String

  createdAt   DateTime        @default(now())

  @@unique([followerId, creatorId])
}

model Subscriber {
  id             String          @id @default(cuid())
  creator        CreatorProfile  @relation(fields: [creatorId], references: [id])
  creatorId      String

  email          String
  isSubscribed   Boolean         @default(true)
  unsubscribedAt DateTime?

  createdAt      DateTime        @default(now())

  @@index([creatorId, email])
}

model NewsletterIssue {
  id           String          @id @default(cuid())
  creator      CreatorProfile  @relation(fields: [creatorId], references: [id])
  creatorId    String

  title        String
  slug         String
  htmlContent  String
  status       IssueStatus     @default(DRAFT)
  publishedAt  DateTime?
  viewCount    Int             @default(0)

  emailSubject String?
  emailIntro   String?

  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  deletedAt    DateTime?       
  @@unique([creatorId, slug])
}
model AiSuggestion {
  id          String   @id @default(cuid())

  user        User?    @relation(fields: [userId], references: [id])
  userId      String?

  creator     CreatorProfile? @relation(fields: [creatorId], references: [id])
  creatorId   String?

  type        String   // "copilot" | "rewrite" | "draft" | etc.
  mode        String?  // e.g. "improve" | "shorten" | "friendlier" for rewrites

  prompt      String   // what we asked the model (or summarised messages)
  reply       String   // model output

  accepted    Boolean  @default(false)  // set true when user clicks Insert
  // optional: what it was used for
  newsletterIssueId String?             // fill later if you want
  // optional: original selected text for rewrites
  originalText String?

  createdAt   DateTime @default(now())
}

enum IssueStatus {
  DRAFT
  PUBLISHED
}
