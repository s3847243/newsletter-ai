generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id @default(cuid())
  email          String           @unique
  passwordHash   String
  name           String?
  image          String?
  googleId       String?          @unique

  creatorProfile CreatorProfile?
  follows        Follow[]         @relation("UserFollows")

  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}

model CreatorProfile {
  id           String           @id @default(cuid())
  user         User             @relation(fields: [userId], references: [id])
  userId       String           @unique

  handle       String           @unique
  displayName  String
  bio          String?
  avatarUrl    String?
  niche        String?

  newsletters  NewsletterIssue[]
  subscribers  Subscriber[]
  followers    Follow[]         @relation("CreatorFollows")

  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
}

model Follow {
  id          String          @id @default(cuid())
  follower    User            @relation("UserFollows", fields: [followerId], references: [id])
  followerId  String

  creator     CreatorProfile  @relation("CreatorFollows", fields: [creatorId], references: [id])
  creatorId   String

  createdAt   DateTime        @default(now())

  @@unique([followerId, creatorId])
}

model Subscriber {
  id             String          @id @default(cuid())
  creator        CreatorProfile  @relation(fields: [creatorId], references: [id])
  creatorId      String

  email          String
  isSubscribed   Boolean         @default(true)
  unsubscribedAt DateTime?

  createdAt      DateTime        @default(now())

  @@index([creatorId, email])
}

model NewsletterIssue {
  id           String          @id @default(cuid())
  creator      CreatorProfile  @relation(fields: [creatorId], references: [id])
  creatorId    String

  title        String
  slug         String
  htmlContent  String
  status       IssueStatus     @default(DRAFT)
  publishedAt  DateTime?
  viewCount    Int             @default(0)

  emailSubject String?
  emailIntro   String?

  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  @@unique([creatorId, slug])
}

enum IssueStatus {
  DRAFT
  PUBLISHED
}